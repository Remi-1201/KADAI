<header>
  <h1>Let's Twista!</h1>
    <h2>編集画面</h2>
</header>

<body>
  <%= form_with(model: @post, local: true) do |form|%>
   <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
    <% end %>
      </ul>
    </div>
  <% end %>
</body>

  <div class="post_content">
    <%= form.label "投稿の内容を編集しましょう！", class:"form_label"%>
    <%= form.text_field :content, class:"form_content" %>
  </div>
  <br>
    <%= form.submit "登録する"%>
    <%= form.submit "戻る", name: 'back' %>
  <% end %>
