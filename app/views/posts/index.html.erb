<html>
  <header>
      <h1>Let's Twista!</h1>
      <p><%= notice %></p>
  </header>
 
 <body>
    <div class="link">
    <%= link_to '新規投稿する！', new_post_path, class: "link" %>
  </div>
    <table>
      <% @posts.each do |post| %>
        <tr><th colspan="3" class="th_label">内容</th></tr>
        <tr><th colspan="3" class="th_content"><%= post.content %></th></tr>
        <tr>
          <td><%= link_to '削除', post_path(post.id), method: :delete, data: { confirm: '本当に削除しても宜しいでしょうか？' }, class: "main_link" %></td>
          <td><%= link_to '詳細', post_path(post.id), class: "main_link" %></td>
          <td><%= link_to "編集", edit_post_path(post.id), data: { confirm: '本当に編集しても宜しいでしょうか？' }, class: "main_link" %></td>          
        </tr>
      <% end %>
    </table>
  <br>
  </body>
</html>
