  <header>
    <h1>Welcome to Twista!</h1>
    <p><%= notice %></p>
  </header>
  <br>
  <br>
  <footer>
    <table>
      <tr>
        <th>内容</th>
        <th>オプション</th>
      </tr>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to '詳細', post_path(post.id) %></td>
        <td><%= link_to "編集", edit_post_path(post.id), data: { confirm: '本当に編集しても宜しいでしょうか？' } %></td>
        <td><%= link_to '削除', post_path(post.id), method: :delete, data: { confirm: '本当に削除しても宜しいでしょうか？' } %></td>
      </tr>
      <% end %>
    </table>
  </footer>
<br>
<%= link_to '新規投稿へ！', new_post_path %>
</body>
</html>