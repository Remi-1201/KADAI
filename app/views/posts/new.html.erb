<header>
  <h1>Let's Twista!</h1>
  <h2>新しい投稿</h2>
</header>

<%= form_with(model: @post, local: true, url:confirm_posts_path) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<p>
  <div class="post_content">
    <p><%= form.label "今のお気持ちはいかがですか？", class:"form_label" %></p>
    <%= form.text_field :content, class:"form_content"%>
  </div>
</p>
  <br>
    <%= form.submit "登録する"%>
<% end %>
