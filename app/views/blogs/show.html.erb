<h1>Detail</h1>
<%= link_to 'Back', blogs_path , class: "button3"%>
&emsp; &emsp;

<% unless @blog.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'Unlike', favorite_path(id: @favorite.id), method: :delete, class: 'unlike' %>
  <% else %>
    <%= link_to 'Like!', favorites_path(blog_id: @blog.id), method: :post, class: "button3" %>
  <% end %>
<% end %>

<div class="table_frame">
  <table>
      <tr><th colspan="3" class="th_label">Created by <%= @blog.user.name %> </th></tr>
      <tr><th colspan="3" class="th_title">Title:&emsp;<%= @blog.title %></th></tr>        
      <tr><th colspan="3" class="th_image">
        <%= image_tag(@blog.image.url) if @blog.image && @blog.image.url %>
      </th></tr>
      <tr><th colspan="3" class="th_content"><%= @blog.content %></th></tr>       
  </table>
</div>
<br>


